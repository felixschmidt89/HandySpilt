{
  "compilerOptions": {
    // Specifies the module code generation: 'ESNext' allows the most recent ECMAScript module syntax.
    "module": "ESNext",
    // Specifies how TypeScript resolves module imports: 'Node' follows Node.js module resolution algorithm.
    "moduleResolution": "Node",
    // Sets the ECMAScript target version for emitted JavaScript
    "target": "ES2020",
    // Enables JSX support: 'react' allows JSX syntax in '.tsx' files.
    "jsx": "react",
    // Allows importing TypeScript files without specifying the file extension.
    "allowImportingTsExtensions": true,
    // Enables strict null checks: Helps catch common programming errors by disallowing 'null' and 'undefined' values.
    "strictNullChecks": true,
    // Enables strict function types: Ensures function types have exact signatures.
    "strictFunctionTypes": true
  },
  // Specifies folders or files TypeScript should ignore when compiling.
  "exclude": ["node_modules"]
}
