{
  // Name of the web app
  "name": "InstantSplit",

  // Short name of the web app (displayed on the home screen)
  "short_name": "InstantSplit",

  // URL that the web app will start at when launched from a user's home screen
  "start_url": "/",

  // How the web app should be displayed (standalone, fullscreen, etc.)
  "display": "standalone",

  // Background color of the web app
  "background_color": "#ffffff",

  // Theme color of the web app (affects the color of the browser toolbar, etc.)
  "theme_color": "#302a4d",

  // Array of icons for different sizes and formats
  "icons": [
    {
      // Path to the icon image file
      "src": "./android-chrome-192x192.png",

      // Size of the icon (width x height)
      "sizes": "192x192",

      // MIME type of the icon image
      "type": "image/png"
    },
    {
      // Path to the icon image file
      "src": "./android-chrome-512x512.png",

      // Size of the icon (width x height)
      "sizes": "512x512",

      // MIME type of the icon image
      "type": "image/png"
    }
  ]
}
